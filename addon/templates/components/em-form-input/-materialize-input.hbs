{{#if faPrefix}}
  <i class="fa {{prefix}}"></i>
{{else if glyphPrefix}}
  <span class="glyphicon {{prefix}}" aria-hidden=true></span>
{{else if materialPrefix}}
  <i class="material-icons prefix">{{prefix}}</i>
{{else}}
  {{prefix}}
{{/if}}

{{#if isSelectType}}
  <select class="em-material-select-input" {{action 'change' on='change'}} multiple={{multiple}}>
    {{#if prompt}}
      <option disabled selected={{is-not value}}>
        {{prompt}}
      </option>
    {{/if}}
    
    {{#each content as |item|}}
      <option value="{{read-path item optionValuePath}}"
              selected={{is-equal item value}}>
        {{read-path item optionLabelPath}}
      </option>
    {{/each}}
  </select>
{{else if isDateType}}
  {{md-input-date label=placeholder value=value}}

{{else if isDatetimeType}}

{{else if isTextareaType}}

{{else if isWebcamType}}

{{else if isTelephone}}
  {{input type="tel" class=materialInputClass name=name value=value}}
{{else if isFile}}
  {{input type="text" value=value name=name class=materialInputClass}}
  <div class="btn">
    <span>File</span>
    {{input type="file" value=value name=name}}
  </div>
{{else if areFiles}}
  {{input type="text" value=value name=name class=materialInputClass accept=accept}}
  <div class="btn">
    <span>File</span>
    {{input type="file" value=value name=name multiple=true}}
  </div>
{{else}}
  {{input type=type value=value name=name class=materialInputClass}}
{{/if}}

<label for="{{name}}">
  <span>{{label}}</span>
</label>

<ul class="material-errors-collection">
  {{#each errorMessages as |error|}}
    <li>
      <small class="red-text">{{error}}</small>
    </li>
  {{/each}}
</ul>